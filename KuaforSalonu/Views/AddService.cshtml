@model Odev.Models.Service

<div class="container mt-5">
    <h2 class="text-center">Yeni Servis Ekle</h2>
    <form asp-action="AddService" method="post" class="mt-4">
        <!-- Servis Adı -->
        <div class="mb-3">
            <label asp-for="Name" class="form-label">Servis Adı</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <!-- Fiyat -->
        <div class="mb-3">
            <label asp-for="Price" class="form-label">Fiyat</label>
            <input asp-for="Price" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <!-- Süre -->
        <div class="mb-3">
            <label asp-for="Duration" class="form-label">Süre (Dakika)</label>
            <input asp-for="Duration" class="form-control" type="number" min="1" max="480" />
            <span asp-validation-for="Duration" class="text-danger"></span>
        </div>

        <!-- Kaydet Butonu -->
        <button type="submit" class="btn btn-primary w-100">Kaydet</button>
    </form>
</div>
